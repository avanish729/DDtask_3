<%- include('./layouts/header') %>
<h1>Login</h1>
<form action="/auth/login" method="post" class="lg-form">
  <div>
    <label for="email">Email/Username</label>
    <input type="email" name="email" id="email" />
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" name="password" id="password" />
  </div>
  <div>
    <input type="submit" value="Login" />
  </div>
</form>
<div>
  <button onclick="window.location.href='/auth/google'">Login with Google</button>
</div>
<div>
  <p>
    Don't have an account? <span><a href="/auth/register">Register</a></span>
  </p>
  <p><a href="/auth/forgot-password">Forgot Password?</a></p>

</div>
<br />
<%- include('./layouts/footer') %>
